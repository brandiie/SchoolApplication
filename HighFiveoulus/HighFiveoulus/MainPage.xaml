<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HighFiveoulus"
             x:Class="HighFiveoulus.MainPage"
             Title="High Fiveoulus School"  
             
             >
    

    <StackLayout
        Padding="50"
         VerticalOptions="Center" 
        
        >
        
        <Image Source="highfive.png" 
           TranslationY="-50"
           TranslationX="-10"
           Aspect="AspectFit"/>

        

        <Entry
            x:Name="UserName"
            Placeholder="UserName ">
        </Entry>

        <Entry
            x:Name="Password"
             Placeholder="Password ">
        </Entry>

        <Button
            Text="Login"
            Clicked="LogInonClicked"
            BackgroundColor="#3F51B5"
            TextColor="White"
            FontAttributes="Bold"
             BorderRadius="20,20,20,20">
        </Button>

        <Button
            Text="SignUp"
            
            Clicked="SignUpClicked"
            BackgroundColor="#3F51B5"
            TextColor="White"
            FontAttributes="Bold"
            BorderRadius="20,20,20,20">
        </Button>

        <Label 
            x:Name="DisplayResult"
            TextColor="Red">
        </Label>

    </StackLayout>
   

</ContentPage>